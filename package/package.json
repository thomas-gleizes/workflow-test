{
  "author": "thomas-gleizes",
  "name": "react-dialog-promise",
  "description": "A simple and typesafe React dialog system that returns a promise",
  "version": "0.4.1",
  "license": "MIT",
  "keywords": [
    "react",
    "dialog",
    "promise",
    "modal",
    "typescript",
    "typesafe"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thomas-gleizes/react-dialog-promise"
  },
  "homepage": "https://github.com/thomas-gleizes/react-dialog-promise#readme",
  "bugs": {
    "url": "https://github.com/thomas-gleizes/react-dialog-promise/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "/src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json",
    "./src": "./src"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "scripts": {
    "clean": "rm -r dist",
    "build": "tsup --dts"
  },
  "devDependencies": {
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/uuid": "^9.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tslib": "^2.5.0",
    "tsup": "^6.7.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "npm": ">=5.0.0"
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
